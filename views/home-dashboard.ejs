 <%- include("include/header")  %>
 
  
  <div class="container py-md-5 container--narrow">

    <%- include('include/flash') %>

    <% if(posts.length){ %>
      <h2 class="text-center mb-4">Latest Posts from the Users you Follow</h2>
      <div class="list-group">
        <% posts.forEach(function(p){ %>
          <a href="/post/<%= p._id %> " class="list-group-item list-group-item-action">
            <img class="avatar-tiny" src="<%= p.author.avatar %>">
            <strong><%= p.title %> </strong> <span class="text-muted small"> by <%= p.author.username %> on <%= p.createdDate.getMonth() + 1 %>/<%= p.createdDate.getDate() %>/<%= p.createdDate.getFullYear() %> </span>
          </a>
        <% }) %>
      </div>
    <% }else{ %>
      <div class="text-center">
        <h2>Hello <strong><%= username %></strong>, your feed is empty.</h2>
        <p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.</p>
      </div>
   <% } %> 
  </div>
  
  <!-- footer begins -->
  <%- include("include/footer") %>