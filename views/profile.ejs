<%- include("include/header") %>

<div class="container py-md-5 container--narrow">
  <%- include('include/flash') %>
  <%- include('include/profileShared') %>
  
    <div class="list-group">
      <% posts.forEach(function(p){ %>
        <a href="/post/<%= p._id %> " class="list-group-item list-group-item-action">
          <img class="avatar-tiny" src="<%= p.author.avatar %>">
          <strong><%= p.title %> </strong> on <%= p.createdDate.getMonth() + 1 %>/<%= p.createdDate.getDate() %>/<%= p.createdDate.getFullYear() %>
        </a>
      <% }) %>
    </div>
  </div>

  <%- include("include/footer") %>